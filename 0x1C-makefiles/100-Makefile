# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Output executable
NAME = school

# Cleanup program
RM = /bin/rm

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Object files derived from source files
OBJ = $(SRC:.c=.o)

# Default target
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	$(CC) $^ -o $@

# Clean rule to delete temporary files and the executable
clean:
	-$(RM) -f *~ $(NAME)

# OcLean rule to delete object files
oclean:
	-$(RM) -f $(OBJ)

# Fclean rule to delete all temporary files, the executable, and object files
fclean: clean oclean

# Re rule to force recompilation of all source files
re: fclean all

.PHONY: all clean oclean fclean re

